@model IEnumerable<Inventory>

@{
    ViewData["Tittle"] = "Inventories";
}
<h1>Inventory</h1>
<p>
    <a class="btn btn-primary" asp-action="Add">+ Add new Inventory item</a>
</p>
<table class="table" style="text-align:center">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product</th>
            <th>Image</th>
            <th>Size</th>
            <th>Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Product.Name
                </td>
                <td>
                    <img src="/media/products/@item.Product.Image"/ width="100" alt="@item.Product.Image">
                </td>
                <td>
                    @item.Size.Value
                </td>
                <td>
                    @item.Amount
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion btn btn-danger">Delete</a>
                </td>
            </tr>
        } 
    </tbody>
</table>
<div class="d-flex w-100 justify-content-center">
    @if (ViewBag.TotalPages > 1)
    {
        <div class="d-flex w-100 justify-content-center">
            <pagination page-count="@ViewBag.TotalPages"
                    page-target="/Admin/Inventory"
                    page-number="@ViewBag.PageNumber"
                    page-range="@ViewBag.PageRange">
            </pagination>

        </div>
    }
</div>