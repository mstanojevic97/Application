@model IEnumerable<Product>

@{
    ViewData["Tittle"] = "Products";
}
<h1>Products</h1>
<p>
    <a class="btn btn-primary" asp-action="Create"> + Create New</a>
</p>

<table class="table" style="text-align:center">
    <thead>
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Gender</th>
            <th>Image</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Brand.Name
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    @item.Gender.Name
                </td>
                <td>
                    <img src="/media/products/@item.Image"/ width="100" alt="@item.Image">
                </td>
                <td>
                    @item.Price.ToString("C2")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@ViewBag.TotalPages"
                page-target="/admin/products/"
                page-number="@ViewBag.PageNumber"
                page-range="@ViewBag.PageRange">
    </pagination>
</div>